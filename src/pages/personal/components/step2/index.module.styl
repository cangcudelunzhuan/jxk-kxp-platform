

.info_box
  display: flex
  flex-wrap: wrap
  width: 600px
  margin: 20px auto 0 auto
  overflow: hidden
  .item
    width: 33.3%
    text-align: center
    position: relative
    color: #333
    margin-bottom: 30px
    font-size: 16px
    label
      display: block
      color: #888
      margin-bottom: 10px
      font-size: 14px
    &:before
      position: absolute
      top: 0
      bottom: 0
      left:-1px
      margin:auto
      height 28px
      width: 1px
      background: #eeeeee
      content: ''
