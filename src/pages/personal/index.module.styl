

.personal_box
  .tab_out
    margin-top: 20px
  :global
    .ant-tabs-nav-wrap
      text-align: center
.top_box
  text-align: center
  display: flex
  flex-direction: column
  align-items: center
  opacity :0.85
  margin-top: 40px
  .img_box
    background:rgba(125,87,228,0.1);
    border-radius:4px;
    padding: 9px
    width: 38px
    img 
      width: 20px
      height 20px
      display: block
  .name_box
    margin-top: 20px
    font-size: 16px
    display: flex
    flex-direction: row
    align-items: center
    .type
      background:rgba(255,255,255,1);
      border:1px solid rgba(125,87,228,1)
      font-size: 12px
      padding: 2px 10px
      border-radius: 3px
      color: rgba(125,87,228,1)
      margin-left: 10px
  .status_box
    font-size: 14px
    margin-top: 10px
    .status
      color: rgba(125,87,228,1)

.button_box
  text-align: center
  margin-top: 30px
  :global
    .ant-btn+.ant-btn
      margin-left: 10px
